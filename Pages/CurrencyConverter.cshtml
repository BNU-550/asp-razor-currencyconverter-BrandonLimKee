@page
@model CurrencyConverterModel
@{

    ViewData["Title"] = "Home page";
}

<div style="background-color:darkseagreen">

    <header class="text-center">

        <h1 class="display-4">Welcome to Razor Pages</h1>

        <h2>By @Model.FullName</h2>

    </header>

    <br /><br />

    <form method="post" class="mx-auto" style="width:200px">

        <p class="col-sm-2">
            <label>GBP</label>
            <input type="number" required="true" asp-for="GBP" />
        </p>

        <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">
                Convert
            </button>
      </p>

        <p>
            @ViewData["Message"]
        </p>

    </form>

</div> 