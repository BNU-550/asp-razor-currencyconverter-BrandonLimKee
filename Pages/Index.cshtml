@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="background-color:aqua">
    <header class="text-center">
        <h1 class="display-4">Welcome to Razor Pages</h1>
        <h2>By @Model.FullName</h2>
    </header>
    <br/><br/>
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label>Name</label>
            <input type="text" required="true" asp-for="FullName" />
        </p>

        <p class="col-sm-2">
            <label>Email</label>
            <input type="email" name="email" />
        </p>

        <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">
            Register
            </button>

        </p>

        <p>
            @ViewData["Message"]
        </p>

    </form>

</div>
